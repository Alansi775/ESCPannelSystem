# ESC Panel System - Environment Configuration
# Development Environment Setup

# ============================================
# Database Configuration
# ============================================

DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=root
DB_NAME=esc_config
DB_SOCKET=/tmp/mysql.sock

# ============================================
# Server Configuration
# ============================================

PORT=7070
SERVER_IP=localhost:7070
NODE_ENV=development

# ============================================
# Email Service (Development)
# ============================================

# استخدم اختبار حساب Ethereal (development فقط)
# للإنتاج: استخدم Gmail, SendGrid, أو SMTP حقيقي

SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=development@ethereal.email
SMTP_PASSWORD=test-password
SMTP_FROM=noreply@escpanel.local

# ============================================
# Authentication
# ============================================

JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRY=24h

# ============================================
# Frontend Configuration
# ============================================

FLUTTER_WEB_URL=http://localhost:8080

# ============================================
# Feature Flags
# ============================================

ENABLE_AUTO_CONFIG=true
ENABLE_OTA_UPDATES=false
ENABLE_PAYMENT_SYSTEM=false

# ============================================
# Logging
# ============================================

LOG_LEVEL=debug
LOG_FILE=logs/server.log

